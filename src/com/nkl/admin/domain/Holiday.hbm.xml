<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.nkl.admin.domain.Holiday" table="holiday">
		<id name="holiday_id" type="java.lang.Integer">
			<column name="holiday_id" />
			<generator class="native" />
		</id>
		<property name="holiday_date" type="java.lang.String">
			<column name="holiday_date"  length="50" />
		</property>
		<property name="holiday_note" type="java.lang.String">
			<column name="holiday_note"  length="300" />
		</property>
	</class>
</hibernate-mapping>
