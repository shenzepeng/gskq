<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.nkl.admin.domain.Dept" table="dept">
		<id name="dept_id" type="java.lang.Integer">
			<column name="dept_id" />
			<generator class="native" />
		</id>
		<property name="dept_name" type="java.lang.String">
			<column name="dept_name"  length="50" />
		</property>
		<property name="dept_note" type="java.lang.String">
			<column name="dept_note"  length="300" />
		</property>
	</class>
</hibernate-mapping>
